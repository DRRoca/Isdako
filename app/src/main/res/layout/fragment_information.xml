<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationFragment"
    android:background="@color/lightgreen">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:id="@+id/loginBack" android:layout_marginTop="0dp" android:layout_marginStart="0dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="50dp" android:layout_marginStart="0dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFORMATION"
            android:textColor="@color/darkgreen"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="220dp"
            android:textAlignment="center"
            android:textSize="24sp" android:fontFamily="sans-serif-black" android:layout_marginStart="0dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/fishes"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="262dp" android:layout_marginStart="0dp"
            android:clickable="true"
            android:id="@+id/informationFishes"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:src="@drawable/g"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="420dp" android:layout_marginStart="4dp"
            android:clickable="true"
            android:id="@+id/informationGears"/>
</RelativeLayout>
