<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ReportFragment"
android:background="@color/lightgreen">

<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:id="@+id/loginBack" android:layout_marginTop="0dp" android:layout_marginStart="0dp"/>
<ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:layout_marginTop="50dp" android:layout_marginStart="0dp"/>
<TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="REPORT"
        android:textColor="@color/darkgreen"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:textSize="24sp" android:fontFamily="sans-serif-black" android:layout_marginStart="30dp"/>

    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/white"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="280dp"
            android:textAlignment="textStart"
            android:textSize="18sp" android:fontFamily="sans-serif" android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="time"
            android:ems="10"
            android:background="@drawable/rounded_green"
            android:layout_marginStart="32dp" android:layout_marginTop="308dp"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:textColor="@color/white" android:textAlignment="textStart"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/reportTime"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Length"
            android:textColor="@color/white"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="350dp"
            android:textAlignment="textStart"
            android:textSize="18sp" android:fontFamily="sans-serif" android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:background="@drawable/rounded_green"
            android:layout_marginStart="32dp" android:layout_marginTop="378dp"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:textColor="@color/white" android:textAlignment="textStart"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/reportLength"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="@color/white"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="420dp"
            android:textAlignment="textStart"
            android:textSize="18sp" android:fontFamily="sans-serif" android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:background="@drawable/rounded_green"
            android:layout_marginStart="32dp" android:layout_marginTop="448dp"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:textColor="@color/white" android:textAlignment="textStart"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/reportWeight"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Species"
            android:textColor="@color/white"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="490dp"
            android:textAlignment="textStart"
            android:textSize="18sp" android:fontFamily="sans-serif" android:layout_marginStart="32dp"/>
    <AutoCompleteTextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_green"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="518dp" android:layout_marginStart="32dp"
            android:textColor="@color/white" android:textAlignment="textStart"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/reportSpecies"/>
<Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/darkgreen"
        android:text="Submit"
        android:textStyle="normal"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:layout_marginTop="630dp" android:layout_marginStart="260dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="16sp"
        android:id="@+id/reportSubmit"/>

</RelativeLayout>